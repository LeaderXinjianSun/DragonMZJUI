<UserControl x:Class="DragonMZJUI.View.BigDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DragonMZJUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="AlarmDataGrid"></DataGrid>
        <StackPanel Margin="5,0" Grid.Row="1" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="机台编号" Margin="0,0,10,0" VerticalAlignment="Center"></TextBlock>
            <TextBox Width="100" x:Name="MachineID_Text"  VerticalAlignment="Center"></TextBox>
            <TextBlock Text="操作人员编号" Margin="10,0,10,0" VerticalAlignment="Center"></TextBlock>
            <TextBox Width="100" x:Name="UserID_Text" VerticalAlignment="Center"></TextBox>
            <Button Width="60" Margin="10,0,10,0" Click="IDSaveButton_Click" Content="保存"></Button>
        </StackPanel>
    </Grid>
</UserControl>
